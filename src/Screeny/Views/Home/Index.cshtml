@{
  ViewBag.Title = "Screeny";
}

<div class="jumbotron">
  <h1>Screeny</h1>
  <p class="lead">App to help with uploading images from devices... Poker Web Client Team!</p>
</div>


@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
  <div class="row">
    <span class="col-md-4">
      <label class="btn btn-primary" for="photo">
        <input id="photo" type="file" name="photo" style="display:none;" onchange="$('#upload-file-info').html($(this).val());">
        Browse Photos
      </label>
    </span>
    <div class="col-md-8">
      <span class='label label-info' id="upload-file-info"></span>
    </div>

  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p>&nbsp;</p>
      <input class="btn btn-default btn-lg btn-block" type="submit" value="Upload" />
      @ViewBag.Message
    </div>
  </div>

}


<hr />

