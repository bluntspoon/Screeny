@{
    ViewBag.Title = "Screeny";
}



<style>

    .gallery {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
             }

    .gallery a {
        display: inline-block;
        margin-bottom: 8px;
        width: calc(30% - 4px);
    
        margin-right: 8px;
        text-decoration: none;
        color: black;
               }

    .gallery a:nth-of-type(2n) {
        margin-right: 0;
                               }



    .gallery a:hover img {
        transform: scale(1.07);
                         }

    .gallery figure {
        margin: 0;
        overflow: hidden;
                    }

    .gallery figcaption {
        margin-top: 15px;
                        }

    .gallery img {
        border: none;
        max-width: 100%;
        max-height: 100%;
        height: auto;
        display: block;
        background: #ccc;
        transition: transform .2s ease-in-out;
                 }

</style>
<div class="gallery">

    @{
        foreach (FileInfo img in Directory.GetFiles(Server.MapPath("~/screenshots"), "*.*", SearchOption.AllDirectories).Select(fn => new FileInfo(fn)).OrderByDescending(f => f.CreationTime))
        {
            <a href="@Url.Content($"~/screenshots/{img.Name}")">
                <figure>
                    <img src="@Url.Content($"~/screenshots/{img.Name}")" />
                    <figcaption>
                        @img.Name
                    </figcaption>
                </figure>
            </a>
        }
    }

</div>



